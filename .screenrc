# auto-screen support; see http://taint.org/wk/RemoteLoginAutoScreen
# detach on hangup
autodetach on
# no startup msg
startup_message off

defscrollback 9999

caption     always         "%{+b rk}%H%{gk} %50=%{rk}%n.%t"
hardstatus  alwayslastline "%?%{yk}%-Lw%?%{wb}%n*%f %t%?(%u)%?%?%{yk}%+Lw%?"

# always use bash
shell /bin/zsh

screen -t [Alice]   		   	0
screen       				1	
screen -t [Jack]     		2
screen              		3
screen -t [Richard]  			4
screen                      5


# erase background with current bg color
defbce "on"
